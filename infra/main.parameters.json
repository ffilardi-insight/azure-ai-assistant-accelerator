{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environmentName": {
      "value": "${AZURE_ENV_NAME}",
      "metadata": {
        "description": "The name of the environment. This value will be used as a prefix and to generate a short unique hash for all resources deployed to the environment.",
        "displayName": "Environment Name",
        "type": "string",
        "minLength": 3,
        "maxLength": 10,
        "isRequired": true
      }
    },
    "location": {
      "value": "${AZURE_LOCATION}",
      "metadata": {
        "description": "Primary location to deploy all resources to, filtered on available regions for Azure Open AI Service.",
        "displayName": "Location",
        "type": "string",
        "allowedValues": [
          "westeurope",
          "southcentralus",
          "australiaeast",
          "canadaeast",
          "eastus",
          "eastus2",
          "francecentral",
          "japaneast",
          "northcentralus",
          "swedencentral",
          "switzerlandnorth",
          "uksouth"
        ],
        "isRequired": true
      }
    },
    "monitorResourceGroupName": {
      "value": "",
      "metadata": {
        "description": "The name of the resource group to deploy the monitoring resources to. If not specified, a new resource group will be created.",
        "displayName": "Monitoring Resource Group Name",
        "type": "string",
        "isRequired": false
      }
    },
    "sharedResourceGroupName": {
      "value": "",
      "metadata": {
        "description": "The name of the resource group to deploy the shared resources to. If not specified, a new resource group will be created.",
        "displayName": "Shared Resource Group Name",
        "type": "string",
        "isRequired": false
      }
    },
    "appResourceGroupName": {
      "value": "",
      "metadata": {
        "description": "The name of the resource group to deploy the application resources to. If not specified, a new resource group will be created.",
        "displayName": "Application Resource Group Name",
        "type": "string",
        "isRequired": false
      }
    },
    "aiResourceGroupName": {
      "value": "",
      "metadata": {
        "description": "The name of the resource group to deploy the AI resources to. If not specified, a new resource group will be created.",
        "displayName": "AI Services Resource Group Name",
        "type": "string",
        "isRequired": false
      }
    },
    "logAnalyticsName": {
      "value": "",
      "metadata": {
        "description": "The name of the Log Analytics workspace to deploy.",
        "displayName": "Log Analytics Name",
        "type": "string",
        "isRequired": false
      }
    },
    "applicationInsightsName": {
      "value": "",
      "metadata": {
        "description": "The name of the Application Insights instance to deploy.",
        "displayName": "Application Insights Name",
        "type": "string",
        "isRequired": false
      }
    },
    "applicationInsightsDashboardName": {
      "value": "",
      "metadata": {
        "description": "The name of the Application Insights dashboard to deploy.",
        "displayName": "Application Insights Dashboard Name",
        "type": "string",
        "isRequired": false
      }
    },
    "keyVaultName": {
      "value": "",
      "metadata": {
        "description": "The name of the Key Vault to deploy.",
        "displayName": "Key Vault Name",
        "type": "string",
        "isRequired": false
      }
    },
    "storageAccountName": {
      "value": "",
      "metadata": {
        "description": "The name of the Storage Account to deploy.",
        "displayName": "Storage Account Name",
        "type": "string",
        "isRequired": false
      }
    },
    "apimServiceName": {
      "value": "",
      "metadata": {
        "description": "The name of the API Management instance to deploy.",
        "displayName": "API Management Name",
        "type": "string",
        "isRequired": false
      }
    },
    "appServiceName": {
      "value": "",
      "metadata": {
        "description": "The name of the App Service to deploy the application.",
        "displayName": "App Service Name",
        "type": "string",
        "isRequired": false
      }
    },
    "appServicePlanName": {
      "value": "",
      "metadata": {
        "description": "The name of the App Service Plan to deploy for the App Service.",
        "displayName": "App Service Plan Name for App Services",
        "type": "string",
        "isRequired": false
      }
    },
    "cosmosDbAccountName": {
      "value": "",
      "metadata": {
        "description": "The name of the Cosmos DB account to deploy.",
        "displayName": "Cosmos DB Account Name",
        "type": "string",
        "isRequired": false
      }
    },
    "openAiServiceName": {
      "value": "",
      "metadata": {
        "description": "The name of the OpenAI service to deploy.",
        "displayName": "OpenAI Service Name",
        "type": "string",
        "isRequired": false
      }
    },
    "cognitiveSearchServiceName": {
      "value": "",
      "metadata": {
        "description": "The name of the Azure Cognitive Search service to deploy.",
        "displayName": "Azure Cognitive Search Service Name",
        "type": "string",
        "isRequired": false
      }
    }
  }
}